FROM python:3.9-slim

# 设置工作目录
WORKDIR /app

# 复制依赖文件
COPY backend/requirements.txt .

# 安装依赖
RUN pip install --no-cache-dir -r requirements.txt

# 复制应用代码
COPY backend/ .

# 复制china_regions.json文件
COPY china_regions.json .

# 创建数据目录（用于存储SQLite数据库文件）
RUN mkdir -p data && chmod 777 data

# 暴露端口
EXPOSE 15667

# 启动应用
CMD ["python", "app.py"]